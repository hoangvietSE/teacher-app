<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llItemVideoAction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_64"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemVideoCrop"
                android:layout_width="@dimen/height_80"
                android:layout_height="match_parent"
                android:background="@color/teal"
                android:gravity="center"
                android:padding="@dimen/space_12"
                android:text="@string/tv.item.video.edit"
                android:textColor="@color/white" />

            <!--<TextView-->
                <!--android:id="@+id/tvItemVideoShare"-->
                <!--android:layout_width="@dimen/height_80"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="#8BC34A"-->
                <!--android:gravity="center"-->
                <!--android:padding="@dimen/space_12"-->
                <!--android:text="@string/tv.item.video.share"-->
                <!--android:textColor="@color/white" />-->

            <TextView
                android:id="@+id/tvItemVideoDelete"
                android:layout_width="@dimen/height_80"
                android:layout_height="match_parent"
                android:background="@color/purple"
                android:gravity="center"
                android:padding="@dimen/space_12"
                android:text="@string/tv.item.video.delete"
                android:textColor="@color/white" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llItemVideoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_64"
                android:layout_margin="@dimen/space_8"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_create_video" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="@dimen/space_8"
                    android:paddingTop="@dimen/space_8"
                    android:text="Video.name.mp4"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_20" />

                <TextView
                    android:id="@+id/tvItemHomeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/space_8"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="@dimen/space_8"
                    android:text="23m:09s, 10/12/2018"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_18" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>