<com.trinhbk.lecturelivestream.customview.SplitPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/split_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    spl:orientation="horizontal"
    spl:paneSizeMin="48dip"
    spl:splitterBackground="@drawable/splitter_bg_h"
    spl:splitterDraggingBackground="#88000000"
    spl:splitterPosition="50%"
    spl:splitterSize="8dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.trinhbk.lecturelivestream.customview.AutoFitTextureView
                android:id="@+id/textureView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/spenViewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/spenViewLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <com.trinhbk.lecturelivestream.customview.MovableFloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llMenuMore"
            android:layout_gravity="top|start"
            android:layout_margin="@dimen/space_16"
            android:src="@drawable/ic_circle_check" />

        <Chronometer
            android:id="@+id/simpleChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPageNumber"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llMenuMore"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:padding="@dimen/space_8">

            <ImageButton
                android:id="@+id/ivPen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@drawable/selector_silver_gray"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_brush" />

            <ImageButton
                android:id="@+id/ibTempBrush"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@drawable/selector_silver_gray"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_laze" />

            <ImageButton
                android:id="@+id/ivEraser"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@drawable/selector_silver_gray"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_eraser" />


            <ImageButton
                android:id="@+id/ivAddImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_image" />

            <ImageButton
                android:id="@+id/ibInsertImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_bitmap" />

            <ImageButton
                android:id="@+id/ibInsertFile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_import" />

            <ImageButton
                android:id="@+id/ibAddVideo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_video_file" />

            <ImageButton
                android:id="@+id/ibCaptureScreen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:src="@drawable/ic_camera_capture_24dp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/ibText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@drawable/selector_silver_gray"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_text" />

            <ImageButton
                android:id="@+id/ibSelection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@drawable/selector_silver_gray"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_move" />

            <ImageButton
                android:id="@+id/ibBound"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@drawable/selector_silver_gray"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_shape" />

            <ImageButton
                android:id="@+id/ibAddPage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_page" />

            <ImageButton
                android:id="@+id/ivUndo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_return" />

            <ImageButton
                android:id="@+id/ivRedo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_next" />

            <ImageButton
                android:id="@+id/ibRecord"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@drawable/selector_silver_gray"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_record" />

            <ImageButton
                android:id="@+id/ibSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space_4"
                android:layout_weight="1"
                android:background="@color/silver"
                android:padding="@dimen/space_4"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_save" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llMenuMore"
            android:layout_centerHorizontal="true"
            android:textColor="#FFAAAAAA"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Page 0" />

    </RelativeLayout>

</com.trinhbk.lecturelivestream.customview.SplitPaneLayout>
